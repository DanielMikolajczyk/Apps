@model Apps.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit Profile";
}

<h1>Wnieś o edytuję profilu</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ExpertRequest">
            @foreach (Expert expert in ViewBag.Experts)
            {
                <div class="form-group">
                <label class="control-label">@expert.Name</label>
                @if (Model.ApplicationUserExperts.Any(aue => aue.ExpertId == expert.Id))
                {
                        <input class="form-control" name="Expert[]" type="checkbox" value="@expert.Id" checked/>
                }
                else
                {
                        <input class="form-control" name="Expert[]" type="checkbox" value="@expert.Id"/>

                }
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
