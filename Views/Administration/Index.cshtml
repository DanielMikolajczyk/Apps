@using Microsoft.AspNetCore.Identity
@using Apps.Data
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "Lista użytkowników";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">FirstName</th>
            <th scope="col">Email</th>
            <th scope="col">Claims</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <th scope="row">@user.Id</th>
                <td>@user.FirstName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-controller="Administration" asp-action="Edit" asp-route-id="@user.Id">Manage Claims</a>
                </td>
                <td>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Administration" asp-action="Details" asp-route-id="@user.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
